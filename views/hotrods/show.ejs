<% include ../partials/header %>


<div class="ui main container segment"style="margin-top: 7.0em">
    <div>
        <h1><%= hotrod.title %></h1>
    </div>
    <div>
        <h3>
            <%= hotrod.year %>
            <%= hotrod.make %>
            <%= hotrod.model %>
            
        </h3> 
    </div>
    
    <div class="ui centered">
       <img src="<%= hotrod.image %>"> 
    </div>
    <h5>Submitted By: <%= hotrod.author.username %></h5>
    <p  class="ui container segment"><%= hotrod.content %></p>
    <div id="buttons">
        <%if(currentUser && hotrod.author.id.equals(currentUser._id)){%>
            <a href="/hotrods/<%= hotrod._id %>/edit" class="ui small yellow button">Edit</a>
            <form action="/hotrods/<%= hotrod._id%>?_method=delete" method="POST">
            <button class="ui small red button">Delete</button>
    </form>
        <% } %>
    </div>
</div>







<% include ../partials/footer %>